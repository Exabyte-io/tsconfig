{
    "compilerOptions": {

        /* Basic Options */
        "target": "es2018",
        "module": "Node16",
        "allowJs": true,
        "jsx": "react",
        // "incremental": true,
        "noEmit": true,
        "noEmitOnError": false,
        "lib": [
            "ES2019",
            "dom"
        ],

        /* Strict Type-Checking Options */
        "strict": true,
        // "noImplicitAny": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,

        /* Module Resolution Options */
        "baseUrl": "../../../",          // Base directory for the parent project
        "rootDir": "../../../",    // Root directory containing the sources
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": [
            "mocha",
            "node"
        ]
    },
    "include": [
        "../../../src/js",
        "../../../tests/js"
    ],
    "exclude": [
        "../../../node_modules",
        "../../../dist"
    ],
    "ts-node": {
        "files": true,
        "compilerOptions": {}
    }
}
